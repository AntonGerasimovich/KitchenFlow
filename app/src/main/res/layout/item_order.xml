<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="order"
            type="com.example.kitchenflow.data.entity.Order" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="180dp"
        app:cardCornerRadius="5dp"
        android:elevation="2dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorSecondaryRed" />

            <TextView
                android:id="@+id/io_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Harriet F."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/io_payment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/io_name_tv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Payment: Done"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/io_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/io_payment_tv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Order #342452345"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/io_items_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/io_order_tv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Number of Items: 10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/io_pickup_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/io_items_num_tv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Pick Up Time: 5:30pm"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/label_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/io_name_tv"
                android:layout_alignBottom="@+id/io_name_tv"
                android:layout_toStartOf="@+id/order_type_iv"
                android:src="@drawable/ic_group_3" />

            <ImageView
                android:id="@+id/order_type_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/io_name_tv"
                android:layout_alignBottom="@+id/io_name_tv"
                android:layout_toStartOf="@id/menu"
                android:src="@drawable/ic_group" />

            <Spinner
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/io_name_tv"
                android:layout_alignBottom="@+id/io_name_tv"
                android:layout_alignParentEnd="true"
                android:background="@drawable/spinner_menu" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>